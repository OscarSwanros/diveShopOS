<%= form_with model: [excursion, trip_dive], class: "space-y-4" do |f| %>
  <% if trip_dive.errors.any? %>
    <div class="p-3 bg-red-100 text-red-800 rounded-md text-sm" role="alert">
      <ul class="list-disc list-inside">
        <% trip_dive.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :dive_number, t("trip_dives.form.dive_number"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :dive_number, required: true, min: 1,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :dive_site_id, t("trip_dives.form.dive_site"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :dive_site_id, dive_sites, :id, :name,
        { prompt: t("trip_dives.form.select_site") },
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :planned_max_depth_meters, t("trip_dives.form.max_depth"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :planned_max_depth_meters, step: 0.1, min: 0,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :planned_bottom_time_minutes, t("trip_dives.form.bottom_time"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :planned_bottom_time_minutes, min: 1,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div>
    <%= f.label :notes, t("trip_dives.form.notes"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 2,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to t("common.cancel"), excursion_path(excursion),
      class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
  </div>
<% end %>
