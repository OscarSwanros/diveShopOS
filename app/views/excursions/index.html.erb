<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold"><%= t("excursions.index.title") %></h1>
    <% if policy(Excursion).create? %>
      <%= link_to t("excursions.index.new"), new_excursion_path,
        class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <% end %>
  </div>

  <%= render "shared/filter_bar", filters: [
    { label: t("excursions.filters.all"), url: excursions_path, active: params[:status].blank? }
  ] + Excursion.statuses.keys.map { |s|
    { label: t("excursions.statuses.#{s}"), url: excursions_path(status: s), active: params[:status] == s }
  } %>

  <% if @excursions.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("excursions.table.title") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("excursions.table.date") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("excursions.table.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("excursions.table.participants") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @excursions.each do |excursion| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to excursion.title, excursion, class: "text-blue-600 hover:text-blue-800 font-medium" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= l(excursion.scheduled_date, format: :long) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% badge_class = case excursion.status
                  when "draft" then "bg-gray-100 text-gray-800"
                  when "published" then "bg-green-100 text-green-800"
                  when "cancelled" then "bg-red-100 text-red-800"
                  when "completed" then "bg-blue-100 text-blue-800"
                  end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
                  <%= t("excursions.statuses.#{excursion.status}") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= excursion.trip_participants.count %> / <%= excursion.capacity %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= t("excursions.index.empty") %></p>
  <% end %>
</div>
