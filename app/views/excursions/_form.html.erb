<%= form_with model: excursion, class: "space-y-4" do |f| %>
  <% if excursion.errors.any? %>
    <div class="p-3 bg-red-100 text-red-800 rounded-md text-sm" role="alert">
      <ul class="list-disc list-inside">
        <% excursion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, t("excursions.form.title"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, required: true,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.label :description, t("excursions.form.description"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 3,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div>
      <%= f.label :scheduled_date, t("excursions.form.date"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :scheduled_date, required: true,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :departure_time, t("excursions.form.departure_time"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.time_field :departure_time,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :return_time, t("excursions.form.return_time"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.time_field :return_time,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div>
      <%= f.label :capacity, t("excursions.form.capacity"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :capacity, required: true, min: 1,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :price, t("excursions.form.price"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, step: 0.01, min: 0,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <p class="mt-1 text-xs text-gray-500"><%= t("excursions.form.price_hint") %></p>
    </div>

    <div>
      <%= f.label :status, t("excursions.form.status"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, Excursion.statuses.keys.map { |s| [t("excursions.statuses.#{s}"), s] },
        {}, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div>
    <%= f.label :notes, t("excursions.form.notes"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 2,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    <p class="mt-1 text-xs text-gray-500"><%= t("excursions.form.notes_hint") %></p>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to t("common.cancel"), excursions_path,
      class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
  </div>
<% end %>
