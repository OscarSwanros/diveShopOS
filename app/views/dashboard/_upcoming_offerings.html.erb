<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-lg font-medium text-gray-900"><%= t("dashboard.upcoming.offerings") %></h2>
    <%= link_to t("dashboard.upcoming.view_all"), courses_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>

  <% if @upcoming_offerings.any? %>
    <div class="space-y-3">
      <% @upcoming_offerings.each do |offering| %>
        <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
          <div>
            <%= link_to offering.course.name,
                  course_course_offering_path(offering.course, offering),
                  class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
            <p class="text-xs text-gray-500">
              <%= l(offering.start_date, format: :long) %> &middot; <%= offering.instructor.name %>
            </p>
          </div>
          <div class="flex items-center space-x-2">
            <% badge_class = case offering.status
              when "published" then "bg-green-100 text-green-800"
              when "in_progress" then "bg-blue-100 text-blue-800"
              else "bg-gray-100 text-gray-800"
              end %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
              <%= t("course_offerings.statuses.#{offering.status}") %>
            </span>
            <span class="text-sm text-gray-700">
              <%= offering.enrollments.countable.size %> / <%= offering.max_students %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= t("dashboard.upcoming.no_offerings") %></p>
  <% end %>
</div>
