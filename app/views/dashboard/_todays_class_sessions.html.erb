<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h2 class="text-lg font-medium text-gray-900 mb-4"><%= t("dashboard.today.class_sessions") %></h2>

  <% if @todays_class_sessions.any? %>
    <div class="space-y-3">
      <% @todays_class_sessions.each do |session| %>
        <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
          <div>
            <%= link_to session.course_offering.course.name,
                  course_course_offering_path(session.course_offering.course, session.course_offering),
                  class: "text-sm font-medium text-blue-600 hover:text-blue-800" %>
            <div class="flex items-center space-x-2 mt-0.5">
              <% badge_class = case session.session_type
                when "classroom" then "bg-gray-100 text-gray-800"
                when "confined_water" then "bg-blue-100 text-blue-800"
                when "open_water" then "bg-green-100 text-green-800"
                end %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
                <%= t("class_sessions.session_types.#{session.session_type}") %>
              </span>
              <span class="text-xs text-gray-500"><%= session.start_time %></span>
            </div>
          </div>
          <span class="text-xs text-gray-500"><%= session.course_offering.instructor.name %></span>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= t("dashboard.today.no_class_sessions") %></p>
  <% end %>
</div>
