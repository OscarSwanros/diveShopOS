<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @course.name %></h1>
      <p class="text-sm text-gray-500 mt-1">
        <%= l(@course_offering.start_date, format: :long) %>
        <% if @course_offering.end_date %>
          - <%= l(@course_offering.end_date, format: :long) %>
        <% end %>
        &middot; <%= @course_offering.instructor.name %>
      </p>
    </div>
    <div class="space-x-2">
      <% if policy(@course_offering).update? %>
        <%= link_to t("common.edit"), edit_course_course_offering_path(@course, @course_offering),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), course_path(@course),
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("course_offerings.show.status") %></dt>
        <dd class="mt-1">
          <% badge_class = case @course_offering.status
            when "draft" then "bg-gray-100 text-gray-800"
            when "published" then "bg-green-100 text-green-800"
            when "in_progress" then "bg-blue-100 text-blue-800"
            when "completed" then "bg-blue-100 text-blue-800"
            when "cancelled" then "bg-red-100 text-red-800"
            end %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
            <%= t("course_offerings.statuses.#{@course_offering.status}") %>
          </span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("course_offerings.show.instructor") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @course_offering.instructor.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("course_offerings.show.students") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @course_offering.max_students - @course_offering.spots_remaining %> / <%= @course_offering.max_students %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("course_offerings.show.price") %></dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= number_to_currency(@course_offering.effective_price_cents / 100.0, unit: @course_offering.effective_price_currency == "USD" ? "$" : @course_offering.effective_price_currency) %>
        </dd>
      </div>
    </dl>
    <% if @course_offering.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <dt class="text-sm font-medium text-gray-500"><%= t("course_offerings.show.notes") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @course_offering.notes %></dd>
      </div>
    <% end %>
  </div>

  <%# Class Sessions section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("course_offerings.show.sessions") %></h2>
      <% if policy(ClassSession).create? %>
        <%= link_to t("class_sessions.new.title"), new_course_course_offering_class_session_path(@course, @course_offering),
          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>

    <% if @class_sessions.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("class_sessions.table.date") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("class_sessions.table.time") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("class_sessions.table.type") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("class_sessions.table.title") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("class_sessions.table.location") %></th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase"><%= t("common.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @class_sessions.each do |session| %>
              <tr>
                <td class="px-4 py-2 text-sm text-gray-900"><%= l(session.scheduled_date, format: :long) %></td>
                <td class="px-4 py-2 text-sm text-gray-900">
                  <%= session.start_time.strftime("%H:%M") %>
                  <% if session.end_time %>
                    - <%= session.end_time.strftime("%H:%M") %>
                  <% end %>
                </td>
                <td class="px-4 py-2 text-sm">
                  <% type_class = case session.session_type
                    when "classroom" then "bg-gray-100 text-gray-800"
                    when "confined_water" then "bg-blue-100 text-blue-800"
                    when "open_water" then "bg-green-100 text-green-800"
                    end %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= type_class %>">
                    <%= t("class_sessions.session_types.#{session.session_type}") %>
                  </span>
                </td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= session.title || "---" %></td>
                <td class="px-4 py-2 text-sm text-gray-900">
                  <%= session.dive_site&.name || session.location_description || "---" %>
                </td>
                <td class="px-4 py-2 text-sm text-right space-x-2">
                  <%= link_to t("common.edit"), edit_course_course_offering_class_session_path(@course, @course_offering, session), class: "text-blue-600 hover:text-blue-800" %>
                  <%= button_to t("common.delete"), course_course_offering_class_session_path(@course, @course_offering, session), method: :delete,
                    class: "text-red-600 hover:text-red-800",
                    form: { data: { turbo_confirm: t("common.confirm_delete") } } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("class_sessions.empty") %></p>
    <% end %>
  </div>

  <%# Enrollments section - populated when Enrollment model is available %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("course_offerings.show.enrollments") %></h2>
    </div>
    <p class="text-sm text-gray-500"><%= t("enrollments.empty") %></p>
  </div>
</div>
