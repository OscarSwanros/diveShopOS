<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @equipment_item.name %></h1>
      <% if @equipment_item.life_support? %>
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 mt-1"><%= t("equipment_items.life_support_badge") %></span>
      <% end %>
    </div>
    <div class="space-x-2">
      <% if policy(@equipment_item).update? %>
        <%= link_to t("common.edit"), edit_equipment_item_path(@equipment_item),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), equipment_items_path,
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <%# Details card %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.category") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= t("equipment_items.categories.#{@equipment_item.category}") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.status") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= t("equipment_items.statuses.#{@equipment_item.status}") %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.size") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.size || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.serial_number") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.serial_number || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.manufacturer") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.manufacturer || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.model") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.product_model || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.purchase_date") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.purchase_date ? l(@equipment_item.purchase_date, format: :long) : "---" %></dd>
      </div>
      <% if @equipment_item.life_support? %>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.last_service") %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.last_service_date ? l(@equipment_item.last_service_date, format: :long) : "---" %></dd>
        </div>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.next_service") %></dt>
          <dd class="mt-1 text-sm">
            <% if @equipment_item.next_service_due %>
              <% if @equipment_item.service_current? %>
                <span class="text-green-700"><%= l(@equipment_item.next_service_due, format: :long) %></span>
              <% else %>
                <span class="text-red-700 font-medium"><%= l(@equipment_item.next_service_due, format: :long) %> (<%= t("equipment_items.service_status.overdue") %>)</span>
              <% end %>
            <% else %>
              <span class="text-red-700 font-medium"><%= t("equipment_items.service_status.no_record") %></span>
            <% end %>
          </dd>
        </div>
      <% end %>
    </dl>
    <% if @equipment_item.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <dt class="text-sm font-medium text-gray-500"><%= t("equipment_items.show.notes") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @equipment_item.notes %></dd>
      </div>
    <% end %>
  </div>

  <%# Service Records section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("equipment_items.show.service_history") %></h2>
      <% if policy(ServiceRecord).create? %>
        <%= link_to t("service_records.new.title"), new_equipment_item_service_record_path(@equipment_item),
          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>

    <% if @service_records.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("service_records.table.date") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("service_records.table.type") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("service_records.table.performed_by") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("service_records.table.next_due") %></th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase"><%= t("common.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @service_records.each do |record| %>
              <tr>
                <td class="px-4 py-2 text-sm text-gray-900"><%= l(record.service_date, format: :long) %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= t("service_records.service_types.#{record.service_type}") %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= record.performed_by %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= record.next_due_date ? l(record.next_due_date, format: :long) : "---" %></td>
                <td class="px-4 py-2 text-sm text-right space-x-2">
                  <% if policy(record).update? %>
                    <%= link_to t("common.edit"), edit_equipment_item_service_record_path(@equipment_item, record), class: "text-blue-600 hover:text-blue-800" %>
                  <% end %>
                  <% if policy(record).destroy? %>
                    <%= button_to t("common.delete"), equipment_item_service_record_path(@equipment_item, record), method: :delete,
                      class: "text-red-600 hover:text-red-800",
                      form: { data: { turbo_confirm: t("common.confirm_delete") } } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("service_records.empty") %></p>
    <% end %>
  </div>
</div>
