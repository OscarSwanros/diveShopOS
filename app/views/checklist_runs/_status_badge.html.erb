<%
  badge_class = case run.status
    when "in_progress" then "bg-blue-100 text-blue-800"
    when "completed" then "bg-green-100 text-green-800"
    when "completed_with_exceptions" then "bg-amber-100 text-amber-800"
    when "abandoned" then "bg-red-100 text-red-800"
    end
%>
<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
  <%= t("checklist_runs.statuses.#{run.status}") %>
</span>
