<%= form_with model: [course, course_offering, class_session], class: "space-y-4" do |f| %>
  <% if class_session.errors.any? %>
    <div class="p-3 bg-red-100 text-red-800 rounded-md text-sm" role="alert">
      <ul class="list-disc list-inside">
        <% class_session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :session_type, t("class_sessions.form.type"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :session_type, ClassSession.session_types.keys.map { |st| [t("class_sessions.session_types.#{st}"), st] },
      {}, class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:max-w-xs" %>
  </div>

  <div>
    <%= f.label :title, t("class_sessions.form.title"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, placeholder: t("class_sessions.form.title_placeholder"),
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
    <div>
      <%= f.label :scheduled_date, t("class_sessions.form.date"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :scheduled_date, required: true,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :start_time, t("class_sessions.form.start_time"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.time_field :start_time, required: true,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :end_time, t("class_sessions.form.end_time"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.time_field :end_time,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div>
    <%= f.label :location_description, t("class_sessions.form.location"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :location_description,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.label :dive_site_id, t("class_sessions.form.dive_site"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :dive_site_id, current_organization.dive_sites.where(active: true).order(:name), :id, :name,
      { include_blank: t("class_sessions.form.no_dive_site") },
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:max-w-xs" %>
    <p class="mt-1 text-xs text-gray-500"><%= t("class_sessions.form.dive_site_hint") %></p>
  </div>

  <div>
    <%= f.label :notes, t("class_sessions.form.notes"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 2,
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to t("common.cancel"), course_course_offering_path(course, course_offering),
      class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
  </div>
<% end %>
