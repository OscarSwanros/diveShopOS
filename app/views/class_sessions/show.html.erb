<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @class_session.title || t("class_sessions.session_types.#{@class_session.session_type}") %></h1>
      <p class="text-sm text-gray-500 mt-1"><%= @course.name %> &middot; <%= l(@class_session.scheduled_date, format: :long) %></p>
    </div>
    <div class="space-x-2">
      <% if policy(@class_session).update? %>
        <%= link_to t("common.edit"), edit_course_course_offering_class_session_path(@course, @course_offering, @class_session),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), course_course_offering_path(@course, @course_offering),
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("class_sessions.show.type") %></dt>
        <dd class="mt-1">
          <% type_class = case @class_session.session_type
            when "classroom" then "bg-gray-100 text-gray-800"
            when "confined_water" then "bg-blue-100 text-blue-800"
            when "open_water" then "bg-green-100 text-green-800"
            end %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= type_class %>">
            <%= t("class_sessions.session_types.#{@class_session.session_type}") %>
          </span>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("class_sessions.show.time") %></dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= @class_session.start_time.strftime("%H:%M") %>
          <% if @class_session.end_time %>
            - <%= @class_session.end_time.strftime("%H:%M") %>
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("class_sessions.show.location") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @class_session.dive_site&.name || @class_session.location_description || "---" %></dd>
      </div>
    </dl>
    <% if @class_session.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <dt class="text-sm font-medium text-gray-500"><%= t("class_sessions.show.notes") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @class_session.notes %></dd>
      </div>
    <% end %>
  </div>

  <%# Attendance section %>
  <% if @attendances.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <h2 class="text-xl font-semibold mb-4"><%= t("session_attendances.title") %></h2>

      <%= form_with url: batch_update_course_course_offering_class_session_session_attendances_path(@course, @course_offering, @class_session), method: :patch, class: "space-y-4" do |f| %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("session_attendances.table.student") %></th>
                <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase"><%= t("session_attendances.table.attended") %></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @attendances.each_with_index do |attendance, idx| %>
                <tr>
                  <td class="px-4 py-2 text-sm text-gray-900">
                    <%= attendance.customer.full_name %>
                    <input type="hidden" name="attendances[<%= idx %>][id]" value="<%= attendance.id %>">
                  </td>
                  <td class="px-4 py-2 text-center">
                    <input type="hidden" name="attendances[<%= idx %>][attended]" value="0">
                    <input type="checkbox" name="attendances[<%= idx %>][attended]" value="1"
                      <%= "checked" if attendance.attended? %>
                      class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="flex justify-end">
          <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <%= t("session_attendances.save") %>
          </button>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
