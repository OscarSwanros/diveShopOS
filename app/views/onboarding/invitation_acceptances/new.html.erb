<% content_for(:page_title) { t("onboarding.invitation.accept_title") } %>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= t("onboarding.invitation.accept_title") %></h1>
  <p class="text-sm text-gray-500 mb-6">
    <%= t("onboarding.invitation.accept_subtitle", organization: @invitation.organization.name) %>
  </p>

  <% if flash[:alert] %>
    <div class="mb-4 p-3 bg-red-100 text-red-800 rounded-md text-sm" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with url: accept_invitation_path(token: params[:token]), method: :post, class: "space-y-4" do |f| %>
    <div>
      <p class="block text-sm font-medium text-gray-700"><%= t("onboarding.invitation.form.name") %></p>
      <p class="mt-1 text-sm text-gray-900"><%= @invitation.name %></p>
    </div>

    <div>
      <p class="block text-sm font-medium text-gray-700"><%= t("onboarding.invitation.form.email") %></p>
      <p class="mt-1 text-sm text-gray-900"><%= @invitation.email %></p>
    </div>

    <div>
      <%= f.label :password, t("onboarding.invitation.form.password"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, required: true, autofocus: true,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :password_confirmation, t("onboarding.invitation.form.password_confirmation"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, required: true,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.submit t("onboarding.invitation.form.accept"), class: "w-full inline-flex justify-center items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    </div>
  <% end %>
</div>
