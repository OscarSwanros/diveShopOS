<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @customer.full_name %></h1>
      <% if !@customer.active? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 mt-1"><%= t("customers.status.inactive") %></span>
      <% end %>
    </div>
    <div class="space-x-2">
      <% if policy(@customer).update? %>
        <%= link_to t("common.edit"), edit_customer_path(@customer),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), customers_path,
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <%# Customer details card %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("customers.show.email") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @customer.email || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("customers.show.phone") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @customer.phone || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("customers.show.date_of_birth") %></dt>
        <dd class="mt-1 text-sm text-gray-900">
          <% if @customer.date_of_birth %>
            <%= l(@customer.date_of_birth, format: :long) %>
            <span class="text-gray-500">(<%= t("customers.show.age", age: @customer.age) %>)</span>
          <% else %>
            ---
          <% end %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("customers.show.emergency_contact") %></dt>
        <dd class="mt-1 text-sm text-gray-900">
          <% if @customer.emergency_contact_name.present? %>
            <%= @customer.emergency_contact_name %>
            <% if @customer.emergency_contact_phone.present? %>
              <span class="block text-xs text-gray-500"><%= @customer.emergency_contact_phone %></span>
            <% end %>
          <% else %>
            ---
          <% end %>
        </dd>
      </div>
    </dl>
    <% if @customer.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <dt class="text-sm font-medium text-gray-500"><%= t("customers.show.notes") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @customer.notes %></dd>
      </div>
    <% end %>
  </div>

  <%# Certifications section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("customers.show.certifications") %></h2>
      <% if policy(Certification).create? %>
        <%= link_to t("certifications.new.title"), new_customer_certification_path(@customer),
          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>

    <% if @certifications.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("certifications.table.level") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("certifications.table.agency") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("certifications.table.number") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("certifications.table.status") %></th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase"><%= t("common.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @certifications.each do |cert| %>
              <tr>
                <td class="px-4 py-2 text-sm text-gray-900"><%= cert.certification_level %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= cert.agency %></td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= cert.certification_number || "---" %></td>
                <td class="px-4 py-2 text-sm">
                  <% if cert.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("certifications.status.active") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= t("certifications.status.expired") %></span>
                  <% end %>
                </td>
                <td class="px-4 py-2 text-sm text-right space-x-2">
                  <%= link_to t("common.edit"), edit_customer_certification_path(@customer, cert), class: "text-blue-600 hover:text-blue-800" %>
                  <%= button_to t("common.delete"), customer_certification_path(@customer, cert), method: :delete,
                    class: "text-red-600 hover:text-red-800",
                    form: { data: { turbo_confirm: t("common.confirm_delete") } } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("certifications.empty") %></p>
    <% end %>
  </div>

  <%# Equipment Profile section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("customers.show.equipment_profile") %></h2>
      <% if @customer.equipment_profile %>
        <% if policy(@customer.equipment_profile).update? %>
          <%= link_to t("common.edit"), edit_customer_equipment_profile_path(@customer),
            class: "inline-flex items-center px-3 py-1.5 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
        <% end %>
      <% elsif policy(EquipmentProfile).create? %>
        <%= link_to t("equipment_profiles.new.title"), new_customer_equipment_profile_path(@customer),
          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>

    <% if (profile = @customer.equipment_profile) %>
      <dl class="grid grid-cols-2 gap-3 sm:grid-cols-4">
        <div>
          <dt class="text-xs font-medium text-gray-500"><%= t("equipment_profiles.show.wetsuit") %></dt>
          <dd class="mt-0.5 text-sm text-gray-900"><%= profile.wetsuit_size || "---" %><%= " (#{profile.wetsuit_thickness_mm}mm)" if profile.wetsuit_thickness_mm %></dd>
        </div>
        <div>
          <dt class="text-xs font-medium text-gray-500"><%= t("equipment_profiles.show.bcd") %></dt>
          <dd class="mt-0.5 text-sm text-gray-900"><%= profile.bcd_size || "---" %></dd>
        </div>
        <div>
          <dt class="text-xs font-medium text-gray-500"><%= t("equipment_profiles.show.boots") %></dt>
          <dd class="mt-0.5 text-sm text-gray-900"><%= profile.boot_size || "---" %></dd>
        </div>
        <div>
          <dt class="text-xs font-medium text-gray-500"><%= t("equipment_profiles.show.gloves") %></dt>
          <dd class="mt-0.5 text-sm text-gray-900"><%= profile.glove_size || "---" %></dd>
        </div>
      </dl>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("equipment_profiles.empty") %></p>
    <% end %>
  </div>

  <%# Customer Tanks section %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold"><%= t("customers.show.customer_tanks") %></h2>
      <% if policy(CustomerTank).create? %>
        <%= link_to t("customer_tanks.new.title"), new_customer_customer_tank_path(@customer),
          class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      <% end %>
    </div>

    <% if @customer_tanks.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("customer_tanks.table.serial") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("customer_tanks.table.size") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("customer_tanks.table.vip") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("customer_tanks.table.hydro") %></th>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("customer_tanks.table.fill_ok") %></th>
              <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase"><%= t("common.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @customer_tanks.each do |tank| %>
              <tr>
                <td class="px-4 py-2 text-sm">
                  <%= link_to tank.serial_number, customer_customer_tank_path(@customer, tank), class: "text-blue-600 hover:text-blue-800 font-medium" %>
                </td>
                <td class="px-4 py-2 text-sm text-gray-900"><%= tank.size || "---" %></td>
                <td class="px-4 py-2 text-sm">
                  <% if tank.vip_current? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("customer_tanks.compliance.current") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= t("customer_tanks.compliance.expired") %></span>
                  <% end %>
                </td>
                <td class="px-4 py-2 text-sm">
                  <% if tank.hydro_current? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("customer_tanks.compliance.current") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= t("customer_tanks.compliance.expired") %></span>
                  <% end %>
                </td>
                <td class="px-4 py-2 text-sm">
                  <% if tank.fill_compliant? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("customer_tanks.compliance.fill_ok") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= t("customer_tanks.compliance.fill_blocked") %></span>
                  <% end %>
                </td>
                <td class="px-4 py-2 text-sm text-right space-x-2">
                  <%= link_to t("common.edit"), edit_customer_customer_tank_path(@customer, tank), class: "text-blue-600 hover:text-blue-800" %>
                  <% if policy(tank).destroy? %>
                    <%= button_to t("common.delete"), customer_customer_tank_path(@customer, tank), method: :delete,
                      class: "text-red-600 hover:text-red-800",
                      form: { data: { turbo_confirm: t("common.confirm_delete") } } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("customer_tanks.empty") %></p>
    <% end %>
  </div>

  <%# Medical Records section (manager+ only) %>
  <% if policy(MedicalRecord).show? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-xl font-semibold"><%= t("customers.show.medical_records") %></h2>
        <% if policy(MedicalRecord).create? %>
          <%= link_to t("medical_records.new.title"), new_customer_medical_record_path(@customer),
            class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        <% end %>
      </div>

      <% if @medical_records.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("medical_records.table.status") %></th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("medical_records.table.clearance_date") %></th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("medical_records.table.expiration") %></th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase"><%= t("medical_records.table.physician") %></th>
                <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase"><%= t("common.actions") %></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @medical_records.each do |record| %>
                <tr>
                  <td class="px-4 py-2 text-sm">
                    <% badge_class = case record.status
                      when "cleared" then "bg-green-100 text-green-800"
                      when "pending_review" then "bg-amber-100 text-amber-800"
                      when "not_cleared" then "bg-red-100 text-red-800"
                      when "expired" then "bg-gray-100 text-gray-800"
                      end %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
                      <%= t("medical_records.statuses.#{record.status}") %>
                    </span>
                  </td>
                  <td class="px-4 py-2 text-sm text-gray-900"><%= record.clearance_date ? l(record.clearance_date, format: :long) : "---" %></td>
                  <td class="px-4 py-2 text-sm text-gray-900"><%= record.expiration_date ? l(record.expiration_date, format: :long) : "---" %></td>
                  <td class="px-4 py-2 text-sm text-gray-900"><%= record.physician_name || "---" %></td>
                  <td class="px-4 py-2 text-sm text-right space-x-2">
                    <%= link_to t("common.edit"), edit_customer_medical_record_path(@customer, record), class: "text-blue-600 hover:text-blue-800" %>
                    <%= button_to t("common.delete"), customer_medical_record_path(@customer, record), method: :delete,
                      class: "text-red-600 hover:text-red-800",
                      form: { data: { turbo_confirm: t("common.confirm_delete") } } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-sm text-gray-500"><%= t("medical_records.empty") %></p>
      <% end %>
    </div>
  <% end %>
</div>
