<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <% css = brand_css_variables %>
    <% if css.present? %>
      <style><%= css.html_safe %></style>
    <% end %>

    <% if current_organization&.favicon&.attached? %>
      <link rel="icon" href="<%= url_for(current_organization.favicon) %>" type="<%= current_organization.favicon.content_type %>">
      <link rel="apple-touch-icon" href="<%= url_for(current_organization.favicon) %>">
    <% else %>
      <link rel="icon" href="/icon.png" type="image/png">
      <link rel="icon" href="/icon.svg" type="image/svg+xml">
      <link rel="apple-touch-icon" href="/icon.png">
    <% end %>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-50 min-h-screen">
    <%= render "public/shared/navbar" %>

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 pt-20">
      <%= render "shared/flash" %>
      <%= yield %>
    </main>

    <footer class="border-t border-gray-200 mt-12 py-8">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between space-y-4 md:space-y-0">
          <div class="text-sm text-gray-500">
            &copy; <%= Date.current.year %> <%= current_organization&.name %>
            <% if current_organization&.tagline.present? %>
              <span class="hidden sm:inline">&mdash; <%= current_organization.tagline %></span>
            <% end %>
          </div>

          <div class="flex items-center space-x-4">
            <% if current_organization&.phone.present? %>
              <span class="text-sm text-gray-500"><%= current_organization.phone %></span>
            <% end %>
            <% if current_organization&.contact_email.present? %>
              <%= mail_to current_organization.contact_email, current_organization.contact_email,
                    class: "text-sm text-gray-500 hover:text-gray-700" %>
            <% end %>
            <% if current_organization&.social_links.present? %>
              <% current_organization.social_links.each do |platform, url| %>
                <% next if url.blank? %>
                <%= link_to url, class: "text-gray-400 hover:text-gray-600", target: "_blank", rel: "noopener noreferrer",
                      aria: { label: platform.capitalize } do %>
                  <span class="text-sm"><%= platform.capitalize %></span>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>

        <% if current_organization&.address.present? %>
          <div class="mt-3 text-sm text-gray-400">
            <%= current_organization.address %>
          </div>
        <% end %>
      </div>
    </footer>
  </body>
</html>
