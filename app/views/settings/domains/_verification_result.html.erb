<div id="dns_verification_result">
  <% if result.present? %>
    <% case result.status %>
    <% when :verified %>
      <div class="rounded-md bg-green-50 border border-green-200 p-4" role="status">
        <div class="flex">
          <svg class="h-5 w-5 text-green-400 shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
          <p class="ml-3 text-sm font-medium text-green-800"><%= result.message %></p>
        </div>
      </div>
    <% when :cname_mismatch, :not_found %>
      <div class="rounded-md bg-amber-50 border border-amber-200 p-4" role="status">
        <div class="flex">
          <svg class="h-5 w-5 text-amber-400 shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
          </svg>
          <p class="ml-3 text-sm font-medium text-amber-800"><%= result.message %></p>
        </div>
      </div>
    <% when :no_domain, :error %>
      <div class="rounded-md bg-red-50 border border-red-200 p-4" role="status">
        <div class="flex">
          <svg class="h-5 w-5 text-red-400 shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
          <p class="ml-3 text-sm font-medium text-red-800"><%= result.message %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
