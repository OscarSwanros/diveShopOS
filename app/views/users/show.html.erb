<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @user.name %></h1>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700 mt-1">
        <%= t("users.roles.#{@user.role}") %>
      </span>
    </div>
    <div class="space-x-2">
      <% if policy(@user).update? %>
        <%= link_to t("common.edit"), edit_user_path(@user),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), users_path,
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("users.show.email") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @user.email_address %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("users.show.role") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= t("users.roles.#{@user.role}") %></dd>
      </div>
    </dl>
  </div>

  <%# Instructor Ratings %>
  <div class="space-y-4">
    <h2 class="text-xl font-semibold"><%= t("users.show.instructor_ratings") %></h2>
    <% if @instructor_ratings.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("instructor_ratings.table.agency") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("instructor_ratings.table.level") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("instructor_ratings.table.status") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @instructor_ratings.each do |rating| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= rating.agency %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= rating.rating_level %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if rating.active? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("instructor_ratings.status.current") %></span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= t("instructor_ratings.status.inactive") %></span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-sm text-gray-500"><%= t("users.show.no_ratings") %></p>
    <% end %>
  </div>
</div>
