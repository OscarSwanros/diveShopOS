<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold"><%= @certification.certification_level %></h1>
      <p class="text-sm text-gray-500 mt-1"><%= @certification.agency %> &middot; <%= @customer.full_name %></p>
    </div>
    <div class="space-x-2">
      <% if policy(@certification).update? %>
        <%= link_to t("common.edit"), edit_customer_certification_path(@customer, @certification),
          class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
      <% end %>
      <%= link_to t("common.back"), customer_path(@customer),
        class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.agency") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.agency %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.level") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.certification_level %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.number") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.certification_number || "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.issued_date") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.issued_date ? l(@certification.issued_date, format: :long) : "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.expiration_date") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.expiration_date ? l(@certification.expiration_date, format: :long) : "---" %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.status") %></dt>
        <dd class="mt-1">
          <% if @certification.active? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800"><%= t("certifications.status.active") %></span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800"><%= t("certifications.status.expired") %></span>
          <% end %>
        </dd>
      </div>
    </dl>
    <% if @certification.notes.present? %>
      <div class="mt-4 pt-4 border-t border-gray-200">
        <dt class="text-sm font-medium text-gray-500"><%= t("certifications.show.notes") %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @certification.notes %></dd>
      </div>
    <% end %>
  </div>
</div>
