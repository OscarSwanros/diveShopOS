<h1 class="text-2xl font-bold text-gray-900 mb-6"><%= I18n.t("review_queue.title") %></h1>

<%# Enrollment Requests %>
<section class="mb-8">
  <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= I18n.t("review_queue.enrollment_requests") %></h2>

  <% if @pending_enrollments.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.customer") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("courses.show.offerings") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.requested") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.safety_gates") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @pending_enrollments.each do |enrollment| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= enrollment.customer.full_name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= enrollment.course_offering.course.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= enrollment.requested_at&.strftime("%b %-d, %Y %l:%M %p") %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= render "enrollment_reviews/safety_gates", gate_results: enrollment.safety_gate_results %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                  <%= button_to I18n.t("review_queue.approve"),
                    approve_enrollment_review_path(enrollment),
                    method: :post,
                    class: "inline-flex items-center px-3 py-1 bg-green-600 text-white text-xs font-medium rounded-md hover:bg-green-700" %>
                  <%= form_with url: decline_enrollment_review_path(enrollment), method: :post, class: "inline-flex items-center" do |f| %>
                    <%= f.text_field :reason,
                      placeholder: I18n.t("review_queue.decline_reason"),
                      class: "text-xs border border-gray-300 rounded-md px-2 py-1 mr-1",
                      required: true %>
                    <%= f.submit I18n.t("review_queue.decline"),
                      class: "inline-flex items-center px-3 py-1 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 cursor-pointer" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= I18n.t("review_queue.empty_enrollments") %></p>
  <% end %>
</section>

<%# Join Requests %>
<section>
  <h2 class="text-xl font-semibold text-gray-900 mb-4"><%= I18n.t("review_queue.join_requests") %></h2>

  <% if @pending_joins.any? %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.customer") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("excursions.index.title") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.requested") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.safety_gates") %></th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= I18n.t("review_queue.actions") %></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @pending_joins.each do |participant| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= participant.name %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= participant.excursion.title %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= participant.requested_at&.strftime("%b %-d, %Y %l:%M %p") %></td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <%= render "enrollment_reviews/safety_gates", gate_results: participant.safety_gate_results %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
                  <%= button_to I18n.t("review_queue.approve"),
                    approve_join_request_review_path(participant),
                    method: :post,
                    class: "inline-flex items-center px-3 py-1 bg-green-600 text-white text-xs font-medium rounded-md hover:bg-green-700" %>
                  <%= form_with url: decline_join_request_review_path(participant), method: :post, class: "inline-flex items-center" do |f| %>
                    <%= f.text_field :reason,
                      placeholder: I18n.t("review_queue.decline_reason"),
                      class: "text-xs border border-gray-300 rounded-md px-2 py-1 mr-1",
                      required: true %>
                    <%= f.submit I18n.t("review_queue.decline"),
                      class: "inline-flex items-center px-3 py-1 bg-red-600 text-white text-xs font-medium rounded-md hover:bg-red-700 cursor-pointer" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= I18n.t("review_queue.empty_joins") %></p>
  <% end %>
</section>
