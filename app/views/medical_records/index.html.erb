<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold"><%= t("medical_records.org_index.title") %></h1>
  </div>

  <%= render "shared/filter_bar", filters: [
    { label: t("excursions.filters.all"), url: medical_records_path, active: params[:status].blank? },
    { label: t("medical_records.statuses.pending_review"), url: medical_records_path(status: "pending_review"), active: params[:status] == "pending_review" },
    { label: t("medical_records.statuses.cleared"), url: medical_records_path(status: "cleared"), active: params[:status] == "cleared" },
    { label: t("medical_records.statuses.not_cleared"), url: medical_records_path(status: "not_cleared"), active: params[:status] == "not_cleared" },
    { label: t("medical_records.statuses.expired"), url: medical_records_path(status: "expired"), active: params[:status] == "expired" }
  ], semantic: case params[:status]
    when "cleared" then :success
    when "pending_review" then :warning
    when "not_cleared", "expired" then :danger
    else :default
    end %>

  <% if @medical_records.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("customers.table.name") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("medical_records.table.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("medical_records.table.clearance_date") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("medical_records.table.expiration") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("medical_records.table.physician") %></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @medical_records.each do |record| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to record.customer.full_name, customer_path(record.customer), class: "text-blue-600 hover:text-blue-800 font-medium" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% badge_class = case record.status
                  when "cleared" then "bg-green-100 text-green-800"
                  when "pending_review" then "bg-amber-100 text-amber-800"
                  when "not_cleared" then "bg-red-100 text-red-800"
                  when "expired" then "bg-red-100 text-red-800"
                  end %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
                  <%= t("medical_records.statuses.#{record.status}") %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= record.clearance_date ? l(record.clearance_date, format: :long) : "---" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= record.expiration_date ? l(record.expiration_date, format: :long) : "---" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= record.physician_name.presence || "---" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-sm text-gray-500"><%= t("medical_records.org_index.empty") %></p>
  <% end %>
</div>
