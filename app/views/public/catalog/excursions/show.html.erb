<% content_for(:page_title) { @excursion.title } %>

<div class="space-y-6">
  <div class="flex items-center space-x-2 text-sm text-gray-500">
    <%= link_to I18n.t("public.catalog.excursions.index.title"), catalog_excursions_path, class: "hover:text-gray-700" %>
    <span>/</span>
    <span class="text-gray-900"><%= @excursion.title %></span>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 space-y-6">
    <div class="flex items-start justify-between">
      <h1 class="text-2xl font-bold text-gray-900"><%= @excursion.title %></h1>
      <% spots = @excursion.spots_remaining %>
      <% if spots > 0 %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
          <%= I18n.t("public.catalog.excursions.spots_remaining", count: spots) %>
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
          <%= I18n.t("public.catalog.excursions.full") %>
        </span>
      <% end %>
    </div>

    <div class="grid gap-4 sm:grid-cols-2">
      <div>
        <p class="text-sm font-medium text-gray-500"><%= I18n.t("public.catalog.excursions.date") %></p>
        <p class="text-gray-900"><%= I18n.l(@excursion.scheduled_date, format: :long) %></p>
      </div>
      <% if @excursion.departure_time.present? || @excursion.return_time.present? %>
        <div>
          <p class="text-sm font-medium text-gray-500"><%= I18n.t("public.catalog.excursions.schedule") %></p>
          <p class="text-gray-900">
            <% if @excursion.departure_time.present? %>
              <%= I18n.t("public.catalog.excursions.departs") %>: <%= @excursion.departure_time %>
            <% end %>
            <% if @excursion.return_time.present? %>
              &middot; <%= I18n.t("public.catalog.excursions.returns") %>: <%= @excursion.return_time %>
            <% end %>
          </p>
        </div>
      <% end %>
      <% if @excursion.price_cents.to_i > 0 %>
        <div>
          <p class="text-sm font-medium text-gray-500"><%= I18n.t("public.catalog.excursions.price") %></p>
          <p class="text-lg font-bold text-gray-900">$<%= number_with_precision(@excursion.price, precision: 2) %></p>
        </div>
      <% end %>
    </div>

    <% if @excursion.description.present? %>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= I18n.t("public.catalog.excursions.description") %></h2>
        <p class="text-gray-700"><%= simple_format(@excursion.description) %></p>
      </div>
    <% end %>

    <% if @excursion.trip_dives.any? %>
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-3"><%= I18n.t("public.catalog.excursions.dive_plan") %></h2>
        <div class="space-y-3">
          <% @excursion.trip_dives.order(:dive_number).each do |trip_dive| %>
            <div class="flex items-start space-x-3 p-3 bg-gray-50 rounded-md">
              <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-700 text-sm font-bold">
                <%= trip_dive.dive_number %>
              </span>
              <div>
                <p class="font-medium text-gray-900"><%= trip_dive.dive_site.name %></p>
                <div class="text-sm text-gray-500 space-x-3">
                  <% if trip_dive.dive_site.max_depth_meters %>
                    <span><%= I18n.t("public.catalog.dive_sites.max_depth") %>: <%= trip_dive.dive_site.max_depth_meters %>m</span>
                  <% end %>
                  <span class="capitalize"><%= trip_dive.dive_site.difficulty_level %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if customer_signed_in? && @excursion.spots_remaining > 0 %>
      <div class="pt-4 border-t border-gray-200">
        <%= link_to I18n.t("public.catalog.excursions.join_trip"),
              new_catalog_excursion_join_request_path(@excursion),
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% elsif !customer_signed_in? %>
      <div class="pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-500 mb-2"><%= I18n.t("public.catalog.excursions.sign_in_to_join") %></p>
        <%= link_to I18n.t("public.navigation.sign_in"), public_login_path,
              class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700" %>
      </div>
    <% end %>
  </div>
</div>
