<%
  badge_classes = case status.to_s
  when "confirmed", "active", "completed"
    "bg-green-100 text-green-800"
  when "pending", "requested"
    "bg-amber-100 text-amber-800"
  when "withdrawn", "failed", "declined", "cancelled"
    "bg-red-100 text-red-800"
  else
    "bg-gray-100 text-gray-800"
  end
%>
<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= badge_classes %>">
  <%= status.to_s.humanize %>
</span>
