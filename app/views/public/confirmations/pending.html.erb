<% content_for(:page_title) { I18n.t("public.confirmations.pending.title") } %>

<div class="max-w-md mx-auto">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 text-center space-y-4">
    <h1 class="text-2xl font-bold text-gray-900"><%= I18n.t("public.confirmations.pending.title") %></h1>

    <p class="text-gray-600">
      <%= I18n.t("public.confirmations.pending.message", email: @email) %>
    </p>

    <%= form_with url: public_resend_confirmation_path, method: :post do |f| %>
      <%= f.hidden_field :email, value: @email %>
      <%= f.submit I18n.t("public.confirmations.pending.resend"),
            class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
    <% end %>
  </div>
</div>
