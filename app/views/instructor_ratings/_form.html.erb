<%= form_with model: instructor_rating, class: "space-y-4" do |f| %>
  <% if instructor_rating.errors.any? %>
    <div class="p-3 bg-red-100 text-red-800 rounded-md text-sm" role="alert">
      <ul class="list-disc list-inside">
        <% instructor_rating.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :user_id, t("instructor_ratings.form.instructor"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.collection_select :user_id, current_organization.users.order(:name), :id, :name,
      { prompt: t("instructor_ratings.form.select_instructor") },
      class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 sm:max-w-xs" %>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :agency, t("instructor_ratings.form.agency"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :agency, required: true, placeholder: t("instructor_ratings.form.agency_placeholder"),
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :rating_level, t("instructor_ratings.form.level"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :rating_level, required: true, placeholder: t("instructor_ratings.form.level_placeholder"),
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div>
      <%= f.label :rating_number, t("instructor_ratings.form.number"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :rating_number,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= f.label :expiration_date, t("instructor_ratings.form.expiration_date"), class: "block text-sm font-medium text-gray-700" %>
      <%= f.date_field :expiration_date,
        class: "mt-1 block w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div class="flex items-center">
    <%= f.check_box :active, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
    <%= f.label :active, t("instructor_ratings.form.active"), class: "ml-2 block text-sm text-gray-700" %>
  </div>

  <div class="flex items-center space-x-4">
    <%= f.submit class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 cursor-pointer" %>
    <%= link_to t("common.cancel"), instructor_ratings_path,
      class: "inline-flex items-center px-4 py-2 bg-white text-gray-700 text-sm font-medium rounded-md border border-gray-300 hover:bg-gray-50" %>
  </div>
<% end %>
